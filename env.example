# Database
DATABASE_URL="postgresql://username:password@localhost:5432/flourish"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Next.js
# No NEXTAUTH_URL needed; using Clerk for auth

# Vapi Voice Assistant
# Private key is used for API calls (server-side only)
VAPI_PRIVATE_KEY=your_vapi_private_key_here

# Public key and Assistant ID are used for the widget (client-side)
# These are safe to expose in the browser
NEXT_PUBLIC_VAPI_PUBLIC_KEY=your_vapi_public_key_here
NEXT_PUBLIC_VAPI_ASSISTANT_ID=your_assistant_id_here
